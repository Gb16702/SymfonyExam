{% extends "base.html.twig" %}
{% block title %}symApp - Accueil {% endblock %}
{% block navbar %}
	<h4>Mon site</h4>
{% endblock %}
{% block body %}
	{% include "./partials/header.html.twig" %}
	<style>
		body {
			overflow-x: "hidden"
		}
	</style>
	<div class="cardsCursor"></div>
	 <div class="containerHome" style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, .6),rgba(10, 10, 10, .4),rgba(50, 50, 50, .1),rgba(50, 50, 50, .1),rgba(50, 50, 50, .1), rgba(50, 50, 50, .1), rgba(50, 50, 50, .1), rgba(130, 130, 130, .2), rgba(220, 220, 220, 1), rgba(255, 255, 255, 1)), url({{ vich_uploader_asset(header, 'imageFile') }}); background-size: cover; background-position: center;">

		<div class="containerHomeTitle">
			<h1 class="containerHomeTitleH1">Bienvenue chez Geo</h1>
			<h4 class="containerHomeTitleH4"></h4>
		</div>
	</div>
		{% for voiture in voitures %}
		{# {% for image in imagesVoitures %} #}

			    {# <pre>
				{{ dump(voiture.titre) }}
			</pre> #}
		{% if loop.index is odd %}
	<div class="containerHomeBody">
			<div  class="containerHomeBodySlideA" style = 'background: white;'>
				<div class="containerHomeBodySlideALeft">
					<div class="containerHomeBodySlideALeftBloc" data-aos = 'fade-right' data-aos-offset="30" data-aos-easing="ease-in-sine">
						  <h2>{{voiture.nom}} : {{ voiture.titre }}</h2>
						<h3 class="description">{{ voiture.description | raw }}</h3>
						<a class = "linkToCar" href="#" data-aos = 'zoom-in' data-aos-offset="20" data-aos-easing="ease-in-sine" >Découvrir {{ voiture.nom }}</a>
						<h4>Carburant de la voiture : <span>{{ voiture.carburant }}</span></h4>
					</div>
				</div>
				<div class="containerHomeBodySlideARight" >
					        <div class="containerHomeBodySlideARightBloc"  style="background-image: url({{ vich_uploader_asset(voiture.imagesVoitures[0], "imageFile") }}); background-size: cover; background-position: left;"></div>
				</div>
			</div>
		</div>
		{% else %}
			<div class="containerHomeBodySlideA" style = 'background: white;'>
				<div class="containerHomeBodySlideARight2">
					    <div class="containerHomeBodySlideARightBloc" style="background-image: url({{ vich_uploader_asset(voiture.imagesVoitures[0], 'imageFile') }}); background-size: cover; background-position: left;"></div>
				</div>
				<div class="containerHomeBodySlideALeft2">
					<div class="containerHomeBodySlideALeftBloc2" data-aos = 'fade-left' data-aos-offset="30" data-aos-easing="ease-in-sine">
						 <h2>{{voiture.nom }} : {{voiture.titre  }}</h2>
						<h3 class="description">{{ voiture.description | raw }}</h3>
						<a class = "linkToCar" href="#" data-aos = 'zoom-in' data-aos-offset="20" data-aos-easing="ease-in-sine">Décourvrir {{ voiture.nom  }}</a>
						<h4>Carburant de la voiture :  <span>{{ voiture.carburant }}</span></h4>
					</div>
				</div>
			</div>
		</div>
		{% endif %}
		{# {% endfor %} #}
	{% endfor %}
	{% include "./partials/footer.html.twig" %}

	<script src="https://cdn.jsdelivr.net/gh/dixonandmoe/rellax@master/rellax.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.11/typed.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
</div>{% endblock %}

