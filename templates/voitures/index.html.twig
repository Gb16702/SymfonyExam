                <td>{{ voiture.id }}</td>
                <td>{{ voiture.nom }}</td>
                <td>{{ voiture.owner }}</td>
                <td>{{ voiture.prix }}</td>
                <td>{{ voiture.km }}</td>
                <td>{{ voiture.Titre }}</td>
                <td>{{ voiture.description }}</td>
                <td>{{ voiture.carburant }}</td>
                <td>{{ voiture.puissance }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
