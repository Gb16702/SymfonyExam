    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Km</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Carburant</th>
                <th>Slug</th>
