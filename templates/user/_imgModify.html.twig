{% extends 'base.html.twig' %}

{% block body %}

    <div class="blocPhoto">
        <h2>Votre image de profil</h2>
    <div class="blocPhotoTop">
        {% if user.picture is null %}
            <div class="userProfilePicture" style = "background-image: url('https://picsum.photos/300/300'); background-size:cover; background-repeat: no-repeat"></div>
        {% else %}
        {{user.picture}}
        {% endif %}
    </div>
    <div class="blocPhotoBot">
    <a class = 'photoLink' href="{{path('app_user', {slug: app.user.slug})}}">Revenir sur mon profil</a>
    </div>
    </div>


    {{ encore_entry_link_tags('imgEdit') }}


{% endblock %}